@page
@model ClassicPRGPattern.Models.Form
@{
    ViewData["FeedBack"] = "You are in Feedback page";
}
<div class="container mt-5">
    <h2>Submit Feedback</h2>
    <form asp-action="CreatePOST" asp-controller="FeedBack" method="post" class="needs-validation" novalidate>
        <div class="form-group mt-1">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
        </div>
        <div class="form-group mt-1">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group mt-1">
            <label asp-for="emailId" class="control-label"></label>
            <input asp-for="emailId" class="form-control" />
        </div>
        <div class="form-group mt-1">
            <label asp-for="UserMessage" class="control-label"></label>
            <textarea asp-for="UserMessage" class="form-control"></textarea>
        </div>
        <div class="form-group mt-1">
            <button type="submit" class="btn btn-primary">Submit Feedback</button>
        </div>
    </form>
</div>
